<%# app/commands/widget_rating_component.html.erb %>


<widget-rating>
  <p role="status">
    Thanks for rating this a
    <slot name="rating"></slot>
  </p>
  <div class="clear-float">
    <h3 style="float: left; margin: 0; padding-right: 1rem;">
      Rate This Widget:
    </h3>
    <ol style="list-style: none; padding: 0; margin: 0">
      <% (1..5).each do |rating| %>
        <li style="float: left">
          <%= button_to rating,
                        widget_ratings_path,
                        params: {
                                  widget_id: widget.id,
                                  rating: rating
                                }
          %>
        </li>
      <% end %>
    </ol>
  </div>
  <% if show_cta %>
    <p>
      Your ratings help us be amazing!
    </p>
  <% end %>
</widget-rating>
